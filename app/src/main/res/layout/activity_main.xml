<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vitaliy.helloworldapp.MainActivity"
    tools:ignore="UseCompoundDrawables">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/Welcome"
        android:contextClickable="true"
        android:gravity="center"
        android:text="@string/Welcome"
        android:textColor="@color/welcome_text_color"
        android:textSize="@dimen/welcome_text_size"
        tools:ignore="Suspicious0dp"
        tools:layout_weight="1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:contextClickable="true"
        app:srcCompat="@drawable/bug"
        tools:contentDescription="@string/bug_logo"
        tools:ignore="ContentDescription,InefficientWeight" />
</LinearLayout>
